# Solana Hyper Bot Environment Configuration
# Copy this file to .env and update with your settings

# Network Configuration (devnet, testnet, mainnet-beta)
SOLANA_NETWORK=devnet
RPC_URL=https://api.devnet.solana.com
WS_URL=wss://api.devnet.solana.com

# Wallet Configuration
# Path to your Solana wallet file (default: ~/.config/solana/id.json)
WALLET_PATH=~/.config/solana/id.json

# Bot Configuration
BOT_ENABLED=true
LOG_LEVEL=info

# Optional: Custom RPC endpoints for better performance
# HELIUS_API_KEY=your_api_key_here
# QUICKNODE_ENDPOINT=your_endpoint_here
# RPC_URL=https://rpc.helius.xyz/?api-key=${HELIUS_API_KEY}
